<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        android:backgroundTint="#680303"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/poster"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movie's Title"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/iv_poster"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_poster"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="7dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/baseline_star_24"/>

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year"
                android:fontFamily="@font/alata"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_title"
                android:layout_toEndOf="@id/iv_star"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"/>

            <ImageView
                android:id="@+id/iv_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_connected_tv_24"
                android:layout_margin="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>